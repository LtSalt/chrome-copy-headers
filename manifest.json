{
    "manifest_version": 3,
    "name": "Copy Headers",
    "version": "0.1",
    "description": "Copies HTTP headers of the current tab to your clipboard.",
    "host_permissions": [
        "http://*/*",
        "https://*/*"
     ],
    "permissions": [ "storage", "webRequest" ],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/copy-16.png",
        "16": "icons/copy-16.png",
        "32": "icons/copy-32.png",
        "48": "icons/copy-48.png",
        "128": "icons/copy-128.png"
    }
}
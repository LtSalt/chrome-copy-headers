{
    "manifest_version": 3,
    "name": "Copy Headers",
    "version": "0.1",
    "description": "Copies HTTP headers of the current tab to your clipboard.",
    "host_permissions": [
        "http://*/*",
        "https://*/*"
     ],
    "permissions": [ "storage", "webRequest" ],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "action": {
        "default_popup": "copy.html",
        "default_icon": "icons/clipboard-19.png"
    }
}